@model GenerationLogBook.ViewModels.LoginFormViewModel
@{
    ViewBag.Title = "Login";
}

<h3></h3>
@section scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            //alert(jQuery.fn.jquery);
            $('body').addClass("signinback");
        });
    </script>
    }
<style type="text/css">
    .invaliduser{
        color:white;
        background-color:red;
    }
</style>
<div id="divsignin" class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title">Please Sign in to Continue</h1>
            <div class="account-wall">
                <img class="profile-img" src="~/Content/User_Avatar-512.png"
                     alt="">
                <form class="form-signin" action="/Login/doLogin" method="post">
                    <input id="UserId" name="UserId" type="email" class="form-control" placeholder="Email: abc@ke.com.pk" required autofocus>
                    <input id="Password" name="Password" type="password" class="form-control" placeholder="Password" required>
                    <button class="btn btn-lg btn-primary btn-block" type="submit">
                        Sign in
                    </button>
                </form>
            </div>
            @Html.ValidationSummary(false, "", new { @class = "invaliduser" })
        </div>
    </div>
</div>