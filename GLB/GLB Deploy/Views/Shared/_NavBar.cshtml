<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("Digital Log Book", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            @{
                if (Session["menuhtml"] == null)
                {
                    if (Session["userid"] != null)
                    {
                        var userid = (string)Session["userid"];
                        //string urlBase = string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"));
                        Session["menuhtml"] = new GenerationLogBook.Utility.UserMenu(userid).getMenuhtml();
                    }
                    else
                    {
                        Session["menuhtml"] = "";
                    }
                }
            }
            @Html.Raw( (string)Session["menuhtml"] )
        </div>
    </div>
</div>
